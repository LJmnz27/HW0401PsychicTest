<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_choice_image_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_choice_image_height"
        android:background="@drawable/loading_gradient"
        android:tag="1"
        app:layout_constraintBottom_toTopOf="@id/fragment_choice_image_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fragment_choice_image_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/fragment_choice_image_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_choice_image_height"
        android:background="@drawable/loading_gradient"
        android:tag="2"
        app:layout_constraintBottom_toTopOf="@id/fragment_choice_image_4"
        app:layout_constraintLeft_toRightOf="@id/fragment_choice_image_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/fragment_choice_image_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_choice_image_height"
        android:background="@drawable/loading_gradient"
        android:tag="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fragment_choice_image_4"
        app:layout_constraintTop_toBottomOf="@id/fragment_choice_image_1"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/fragment_choice_image_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_choice_image_height"
        android:background="@drawable/loading_gradient"
        android:tag="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fragment_choice_image_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_choice_image_2"
        tools:src="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>
